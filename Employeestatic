The objective of this program is to maintain a count of the number of Employee objects in memory

public class Employee
{
   private String firstName;
   private String lastName;
   
   private static int count = 0; // number of Employees created
   
   // initialize Employee, add 1 to the static count and output the string indicating the constructor was called
   
   public Employee( String first, String last)
   {
      firstName = first;
      lastName = last;
      
      ++count; // increment static count of employees
      System.out.printf( " Employee constructor: % s % s; count = % d\n",firstName, lastName,count);
   }
   
   // get the first name
   
   public String getFirstName
   {
      return firstName;
   }  // end method getfirstName
   
   public String getLastName
   {
      return lastName;
   }
   
   // static method to get static count value
   
   public static int getcount()
   {
      return count;
   }  // end method getCount
 }  // end class Employee
 
 
   
   
   
   
   
      
      
